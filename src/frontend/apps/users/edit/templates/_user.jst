{{ _('User:') }} <%= display_name %>
<form class="form-horizontal">
  <div class="user-form">
    <div>
      <input class="form-control" id="user-edit-form-description" name="description" type="text" value="<%= description %>" />
    </div>
    <div class="user-form-action">
      <button id="user-edit-form-save" type="submit" class="btn btn-default">{{ _('Save') }}</button>
    </div>
  </div>
  <p class="loading">Saving to server...</p>
</form>
