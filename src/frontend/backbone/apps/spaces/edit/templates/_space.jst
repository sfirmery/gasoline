{{ _('Space:') }} <%= name %>
<div class="space-form">
  <div>
    <input class="form-control" id="space-edit-form-description" name="description" type="text" value="<%= description %>" />
  </div>
  <div class="space-form-action">
    <button id="space-edit-form-save" type="submit" class="btn btn-default">{{ _('Save') }}</button>
    <button id="space-edit-form-cancel" type="button" class="btn btn-default">{{ _('Cancel') }}</button>
  </div>
</div>
<p class="loading">Saving to server...</p>