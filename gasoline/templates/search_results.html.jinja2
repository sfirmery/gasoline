<!-- extend base layout -->
{% extends "base.html.jinja2" %}

{% block content %}
<h4>{{ ngettext('%(count)d of %(num)i result found in %(seconds)fs', '%(count)d of %(num)i results found in %(seconds)fs', results['estimated_length'], count=results['scored_length'], seconds=results['runtime']) }}</h4>
<ul>
	{% for result in results['list'] %}
	<li><a href="{{ url_for('document.view', space=result['space'], doc_id=result['id']) }}">{{ result['id'] }}</a> - {{ result['score'] }} - {{ result['rank'] }}</li>
	{% endfor %}
</ul>
{% endblock %}